<!-- HTMl section for main home page -->
<link rel="stylesheet" href="/css/home.css">  
        <div class="form_class">
            <form action="/create_todo" method="POST">
            <div class="desc_Class">
                <input type="textarea" required name="desc" placeholder="what do you need to do"> 
            </div>
            <div class="select_and_input">
                <select name="category" required>
                    <option value="" disabled selected>Select your option</option>
                    <option>Personal</option>
                    <option>Work</option>
                    <option>Cleaning</option>
                    <option>Others</option>
                </select>
                <input class="datesValues" type="date" name="dateValue" placeholder="Due data dd/mm/yyyy" required>
            </div>
                <button class="buttonDesign colorGrey" id="submitButton" type="submit"><i class="fa fa-folder-plus" > </i> Add Task</button>
                <button class="buttonDesign colorPink" id="deleteButton" type="submit"><i class="fa-solid fa-trash-can"></i></i> Delete Task</button>
      
            </form>
                 
        </div>

<!-- for displaying TODO lists -->
        <div class="singleTask-container">
            <% for(let i of todoList) { let j=0; let newIds='descids'+j; %>
            
            <div class="singleTask">
                    <input type="checkbox" name="delete-check" class="delete-check" onclick="checkedOrNot()" uid = <%= i._id %> >
                    <div class="name_and_dueDate">
                        <p id=<%= i._id %>  uid = <%= i._id %> class="dispdsc"><%= i.desc %></p>
                        <p id=<%= i._id + i.dueDate %> class="dueDate"  ><%= i.dueDate %></p>
                    </div>
                    <div class="category">
                        <%= i.category  %>
                    </div class="editClass-parent" >
                        <div class="editClass"><a href="/editdata/?id=<%=i._id %>">Edit <i class="fa-solid fa-file-pen"></i></a></div>
                    </div>
                <% j++; } %>
 
        </div>



